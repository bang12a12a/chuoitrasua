
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@model List<ChuoiCuaHangTraSua.Models.Model.NhanVienModel>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header row">
                        <strong class="card-title col-xl-10 col-md-10">BẢNG LƯƠNG</strong>

                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th width="5%">STT</th>
                                    <th width="15%">Họ tên</th>
                                    
                                    <th width="10%">SĐT</th>
                                    <th width="10%">Chi nhánh</th>
                                    <th width="10%">Chức vụ</th>
                                    <th width="10%">Lương</th>
                                    <th width="15%"></th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="5%" class="table-center">@item.STT</td>
                                        <td width="15%" class="admin-spc-tensp"><span>@item.HoTen</span> </td>
                                       
                                        <td width="15%" class="table-center">@item.SDT</td>
                                        <td width="15%">@item.TenChiNhanh</td>
                                        <td width="15%">@item.TenChucVu</td>
                                        <td width="10%" class="table-center">@String.Format("{0:0,0}", @item.Luong)đ </td>
                                        <td width="15%" class="table-center" >
                                            <a href="/NhanVienAdmin/Delete?manhanvien=@item.Id" class="btn btn-danger" onclick="alert('Bạn có chắc muốn xóa không?')">Xóa</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div>


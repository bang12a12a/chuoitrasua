
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@model List<ChuoiCuaHangTraSua.Models.Model.ChucVuModel>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header row">
                        <strong class="card-title col-xl-10 col-md-10">DANH SÁCH CHI NHÁNH</strong>
                        <a href="/ChucVuAdmin/CreateChucVu" class="col-xl-1 col-md-1 btn btn-primary">Thêm</a>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th width="5%">STT</th>
                                    <th width="15%">Tên chức vụ</th>
                                    <th width="10%">Lương</th>
                                   

                                    <th width="11%">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="5%" class="table-center">@item.STT</td>
                                        <td width="15%" class="admin-spc-tensp"><span>@item.TenChucVu</span> </td>
                                        @if (item.Luong == 0)
                                        {
                                            <td width="15%" class="table-center">0 đ</td>
                                        }
                                        else
                                        {
                                            <td width="15%" class="table-center">@String.Format("{0:0,0}", item.Luong) đ</td>
                                        }
                                        <td width="11%" class="chucnang table-center">
                                            <a href="/ChucVuAdmin/EditChucVu?machucvu=@item.Id" class="btn btn-primary">Sửa</a>

                                            <a href="/ChucVuAdmin/DeleteChucVu?machucvu=@item.Id" class="btn btn-danger" id="" onclick="alert('Bạn có chắc muốn xóa không?')">Xóa</a> <br /> <br />
                                            
                                        </td>


                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div>


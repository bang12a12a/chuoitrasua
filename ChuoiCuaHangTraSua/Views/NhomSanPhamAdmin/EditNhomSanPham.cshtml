
@{
    ViewBag.Title = "EditNhomSanPham";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@model ChuoiCuaHangTraSua.Models.Model.NhomSanPhamModel
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10 editproduct">


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="dp-title">
                <span>SỬA THÔNG TIN SẢN PHẨM</span>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

          
            <div class="dp-content">
                @Html.TextBoxFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" }, @style = "display:none;" })
                <div class="form-group row">
                    @Html.LabelFor(model => model.Ten, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Ten, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.SPChinhPhu, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.SPChinhPhu, Model.SelectSPChinhPhu, "--------Chọn loại sản phẩm----------", new { @class = "form-control" })

                        @Html.ValidationMessageFor(model => model.SPChinhPhu, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <div class="dp-bottom">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-5"></div>
                        <div class="col-md-2">
                            <input type="submit" value="Lưu" class="btn btn-primary" />
                        </div>
                        <div class="col-md-5"></div>

                    </div>
                </div>
            </div>


        </div>
        }

        <div class="col-md-1"></div>
    </div>
    <div class="col-md-1"></div>
</div>

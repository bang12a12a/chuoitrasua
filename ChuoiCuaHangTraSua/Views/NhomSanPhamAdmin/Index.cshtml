
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@model List<ChuoiCuaHangTraSua.Models.Model.NhomSanPhamModel>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header row">
                        <strong class="card-title col-md-11">NHÓM SẢN PHẨM</strong>
                        <a class="btn btn-primary col-md-1" href="/NhomSanPhamAdmin/CreateNhomSanPham">Thêm</a>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th width="5%">STT</th>
                                    <th width="15%">Tên nhóm sản phẩm</th>
                                    <th width="10%">Sản phẩm chính phụ</th>
                                    <th width="11%">Chức năng</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td width="5%" class="table-center">@item.STT</td>
                                    <td width="15%" class="admin-spc-tensp table-center"><span>@item.Ten</span> </td>
                                    <td width="15%" class="table-center"><span>@item.TenChinhPhu</span> </td>


                                    <td width="11%" class="chucnang table-center">
                                        <a href="/NhomSanPhamAdmin/EditNhomSanPham?manhomsp=@item.Id" class="btn btn-primary">Sửa</a>
                                        <a href="/NhomSanPhamAdmin/DeleteNhomSanPham?manhomsp=@item.Id" class="btn btn-danger" id="" onclick="alert('Bạn có chắc muốn xóa không?')">Xóa</a> <br />

                                    </td>
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div>



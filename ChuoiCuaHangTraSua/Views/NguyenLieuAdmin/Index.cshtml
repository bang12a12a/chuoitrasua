
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@model List<ChuoiCuaHangTraSua.Models.Model.NguyenLieuModel>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header row">
                        <strong class="card-title col-xl-10 col-md-10">DANH SÁCH NGUYÊN LIỆU</strong>
                        <a href="/NguyenLieuAdmin/CreateNguyenLieu" class="col-xl-2 col-md-2 btn btn-primary">Thêm</a>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th width="5%">STT</th>
                                    <th width="15%">Tên nguyên liệu</th>
                                    <th width="11%">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="5%" class="table-center">@item.STT</td>
                                        <td width="15%" class="admin-spc-tensp"><span>@item.TenNguyenLieu</span> </td>
                                        <td width="11%" class="chucnang table-center">
                                            <a href="/NguyenLieuAdmin/EditNguyenLieu?manguyenlieu=@item.Id" class="btn btn-primary">Sửa</a>

                                            <a href="/NguyenLieuAdmin/DeleteNguyenLieu?manguyenlieu=@item.Id" class="btn btn-danger" id="" onclick="alert('Bạn có chắc muốn xóa không?')">Xóa</a> <br /> <br />

                                        </td>


                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>

        </div>
    </div><!-- .animated -->
</div>



